{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2017",
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "extendedDiagnostics": true,

        "strictNullChecks": true
    },
    "include": [
        "./src/tests",
        "./src/typescript/*",
        "./src/typescript/venience/*",
        "./src/components/*"
    ],

    "exclude": [
        "./src/typescript/venience"
    ]
}