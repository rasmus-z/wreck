{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2017",
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "jsxFactory": "createElement",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "extendedDiagnostics": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    },
    "include": [
        // "./src/typescript/main.tsx"
        // "./src/tests",
        // "./src/typescript/*",
        // "./src/typescript/UI/**/*",
        // "./src/typescript/story/**/*",
        // "./src/typescript/demo_worlds/bird_world.tsx"
        
    ],
    "files": [
        "./src/typescript/main.tsx",
        "./src/typescript/demo_worlds/bird_world.tsx"
    ],
    "exclude": [
        // "./src/*",
        // "./src/**",
        // "./src/**/*",
        // "./src/**/**",
        "./src/tests",
        "./src/tests/*",
        "./src/tests/**",
        // "./src/typescript/demo_worlds/*",
        // "./src/typescript/demo_worlds/**",
        // "./src/typescript/demo_worlds/narrascope/*",
        "./src/typescript/venience",
        // "./src/typescript/lock.ts",
        // "./src/typescript/narrative_fsa.ts",
        "./src/typescript/UI/Terminal2.tsx",
        "./src/typescript/UI/Terminal3.tsx",
    ]
}