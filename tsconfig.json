{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2017",
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "extendedDiagnostics": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "strictBindCallApply": false
    },
    "include": [
        "./src/tests",
        "./src/typescript/*",
        "./src/typescript/demo_worlds/**/*",
        "./src/components"
    ],

    "exclude": [
        "./src/typescript/venience",
    ]
}